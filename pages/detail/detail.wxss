page {
    background: #EEE;
}
.cover-container {
    background: #42BD56;
    text-align: center;
    padding: 50rpx 0;
}
.cover-container image {
    display: inline-block;
    width: 300rpx;
    height: 400rpx;
}

.movie-meta {
    position: relative;
    padding: 20rpx;
    overflow: hidden;
}
.movie-meta .range {
    position: absolute;
    top: 25rpx;
    right: 20rpx;
    width: 180rpx;
    height:170rpx;
    background: #FFF;
    padding: 20rpx 10rpx;
    text-align: center;
    box-shadow: 2px 2px 10px #CCC;
}
.movie-meta .range .collect{
   display: inline-block;
  height: 70rpx;
  width:90rpx;
}

.movie-meta .meta-info {
    margin-right: 200rpx;
}
.meta-info text {
    display: block
}
.movie-title {
    font-weight: bold;
    font-size: 40rpx;
}
.other-meta {
    padding-top: 10rpx;
    color: #888;
    font-size: 30rpx;
}
.range text {
    display: block;
}
.range .score {
    font-size: 50rpx;
    font-weight: bold;
}
.range .starts {
    font-size: 40rpx;
}
.range .viewers {
    font-size: 30rpx;
}

.movie-intro{
    padding: 20rpx;
    background: #FAFAFA;
}

.movie-button {

    background: #FAFAFA;
    display: flex;
    flex-direction:row;
}
.movie-intro .intro-header {
    color: #888;
    font-weight: bold;
    padding: 40rpx 0;
}
.movie-intro .intro-content {
    font-size: 35rpx;
    line-height: 2;
    text-align: justify
}
